<section>
<div class="container mt-3">
    <h3 style="text-align: center;">Edit product</h3>
<form action="/admin/edit-product/{{product._id}}" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" name="name" class="form-control" id="text" aria-describedby="emailHelp" value="{{product.name}}" placeholder="Enter product name">
    
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">category</label>
    <input type="text" name="category" class="form-control" id="exampleInputPassword1" placeholder="category" value="{{product.category}}">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Price</label>
    <input type="text" name="price" class="form-control" id="exampleInputPassword1" placeholder="category">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea name="discription" class="form-control" id="exampleFormControlTextarea1" rows="3" value="{{product.discription}}"></textarea>
  </div>
  <div class="form-group mt-4">
    <label for="">Image</label>
    <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px;height:auto" id="imgView">
    <input type="file" class="form-control-file"  name="image" onchange="viewImage(event)">
  </div>
  <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>

</div>

</section>


<script>
  function  viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>